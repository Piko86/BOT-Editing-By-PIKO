name: Validate Bot Build

on:
  push:
    branches:
      - V-2

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: ⬇️ Checkout Repo
        uses: actions/checkout@v4

      - name: 🟢 Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: 📦 Install Dependencies
        run: npm install

      - name: ✅ Test Start index.js (Optional)
        run: |
          node index.js || echo "Bot exited (which is expected if it runs a long WhatsApp connection)"
